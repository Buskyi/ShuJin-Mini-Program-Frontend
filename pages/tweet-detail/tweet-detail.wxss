/* /pages/tweet-detail/tweet-detail.wxss */
.container {
  padding: 20px;
  background-color: #f7f8fa;
}
.tweet-card {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}
.avatar-container {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.avatar {
  width: 100%;
  height: 100%;
}
.tweet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}
.header-left {
  display: flex;
  align-items: center;
}
.tweet-author {
  font-size: 16px;
  font-weight: bold;
  margin-right: 10px;
  color: #333;
}
.official-tag {
  font-size: 12px;
  color: #07c160;
  padding: 2px 6px;
  border: 1px solid #07c160;
  border-radius: 4px;
}
.tweet-time {
  font-size: 12px;
  color: #999;
}
.tweet-content {
  margin-top: 10px;
}
.content-text {
  font-size: 14px;
  line-height: 1.5;
  color: #333;
}
.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}
.grid-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 4px;
}
.action-bar {
  display: flex;
  gap: 20px;
  justify-content: flex-end;
  padding-top: 12px;
  margin-top: 10px;
}
.action-item {
  display: flex;
  align-items: center;
  margin-left: 20px;
  gap: 4px;
}
.action-icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}
.action-text {
  font-size: 12px;
  color: #666;
}