/* /pages/books/books.wxss */
.container {
  padding: 10px;
  background-color: #f7f7f7;
  min-height: 100vh;
}
.article-list {
  margin-top: 15px;
}
.van-card {
  margin-bottom: 10px; /* 减小卡片间距 */
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); /* 阴影更轻 */
  overflow: hidden;
  text-align: center;
  width: 95%; /* 卡片宽度微调 */
  margin-left: auto;
  margin-right: auto;
}
.van-card__title {
  font-size: 18px !important; /* 从20px调小到18px */
  font-weight: bold;
  text-align: center !important;
  padding: 6px 0 !important; /* 减小内边距 */
  line-height: 1.3; /* 紧凑行高 */
}
.article-summary-container {
  position: relative;
  padding-bottom: 20px;
  width: 100%;
}
.article-summary {
  font-size: 12px !important;
  color: #666;
  line-height: 1.5;
  text-align: center;
  padding: 0 10px 8px !important;
  width: 100%; /* 确保宽度充满 */
  white-space: nowrap; /* 防止自动换行 */
  overflow: hidden; /* 隐藏溢出内容 */
}
.article-summary.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.expand-button {
  position: absolute;
  right: -5px;
  bottom: -10px;
  color: #2a57b994;
  font-size: 12px;
  padding-left: 10px;
  background: linear-gradient(to right, transparent, #f7f7f7 30%);
  z-index: 1;
}
.van-card__header {
  padding: 10px 12px !important;
}
.van-card__content {
  padding: 0 12px 8px !important;
  text-align: center !important;
}