/* /pages/channel/channel.wxss */
.container {
  padding: 12px;
  background: #f5f7fa;
  min-height: 100vh;
}
.tweet-card {
  margin: 8px 0;
  border-radius: 12px !important;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
  overflow: hidden;
}
.avatar-container {
  width: 50px;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 4px;
}
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #f0f2f5;
}
.tweet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
}
.header-left {
  display: flex;
  align-items: center;
  gap: 6px;
  width: auto;
  flex: 1;
}
.tweet-author {
  font-size: 15px;
  font-weight: 500;
  color: #1a1a1a;
}
.tweet-tag {
  font-size: 10px;
  color: #07c160;
  padding: 2px 4px;
  border: 1px solid #07c160;
  border-radius: 3px;
}
.tweet-time {
  font-size: 12px;
  color: #999;
}
.tweet-content {
  margin: 8px 0;
  flex: 1;
  flex-shrink: 0;
}
.content-text {
  font-size: 14px;
  line-height: 1.6;
  color: #333;
}
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4px;
  margin-top: 8px;
}
.grid-image {
  width: 100%;
  height: 100px;
  border-radius: 6px;
  object-fit: cover;
}
.action-bar {
  display: flex;
  gap: 20px;
  padding-top: 12px;
  margin-top: 12px;
  border-top: 1px solid #eee;
}
.action-item {
  display: flex;
  align-items: center;
  gap: 4px;
}
.action-text {
  font-size: 12px;
  color: #666;
}
.loading-container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}
.loading-text {
  font-size: 12px;
  color: #999;
}
.end-container {
  padding: 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}
.end-icon {
  width: 60px;
  height: 60px;
  opacity: 0.6;
}
.end-text {
  font-size: 12px;
  color: #999;
}
.empty-tip {
  margin-top: 8px;
  font-size: 12px;
  color: #999;
}
.custom-divider {
  margin: 12px 0 !important;
  border-color: #f0f0f0 !important;
}