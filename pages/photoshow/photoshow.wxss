/* /pages/photoshow/photoshow.wxss */
.container {
  padding: 20rpx;
}
.gallery-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.image-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.image-item {
  width: 48%;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
}
.thumbnail {
  width: 100%;
  height: 300rpx;
}
.image-title {
  padding: 10rpx;
  font-size: 28rpx;
  text-align: center;
}
.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
}