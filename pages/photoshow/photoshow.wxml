<!-- /pages/photoshow/photoshow.wxml -->
<view class="container">
  <view class="gallery-title">图片展示</view>
  <view class="image-grid">
    <block wx:for="{{images}}" wx:key="id">
      <view class="image-item" bindtap="previewImage" data-index="{{index}}">
        <image src="{{item.image_url}}" mode="aspectFill" class="thumbnail"></image>
        <view class="image-title">{{item.title}}</view>
      </view>
    </block>
  </view>
  <view wx:if="{{loading}}" class="loading">加载中...</view>
</view>